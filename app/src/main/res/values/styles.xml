<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BitcoinWidgets" />

    <style name="BitcoinWidgets.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_span">2</item>
    </style>

    <style name="BitcoinWidgets.ListIcon">
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="BitcoinWidgets.ListItem">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="BitcoinWidgets.Widget" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">@drawable/widget_background</item>
    </style>

    <style name="BitcoinWidgets.Widget.Bitcoin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_bitcoin</item>
    </style>

    <style name="BitcoinWidgets.Widget.BlockHeight" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BitcoinWidgets.Widget.FootNote" parent="TextAppearance.Material3.BodySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BitcoinWidgets.Widget.Fee" parent="TextAppearance.Material3.BodySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BitcoinWidgets.Widget.Error" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
